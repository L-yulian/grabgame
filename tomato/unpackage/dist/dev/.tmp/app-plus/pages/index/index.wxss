.list{
		margin-top: 50rpx;
		width: 750rpx;
		background-color: #ffffff;
}
.list .list-item{
		margin:20rpx 0rpx;
		/* border-radius: 20upx;
		box -shadow: 5px 5px 20px #aaaaaa;*/
		width: 100%;
		height: 293rpx;
		overflow: hidden;
		/* background-image:url("../../static/img/ic_game_bg.png"); */
		background-repeat:no-repeat;
		background-size:100% 100%;
